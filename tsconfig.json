{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",

    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",

    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["src/**/*"]
}
